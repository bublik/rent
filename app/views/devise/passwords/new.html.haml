%h3 Забыли пароль?
.authform
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f|
    %p Мы отправим вам инстукции по восстановлению
    = devise_error_messages!
    = f.input :email, :autofocus => true
    = f.submit 'Сбросить пароль', :class => 'button right'
