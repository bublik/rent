= simple_form_for(@renter) do |f|
  = f.error_notification
  .row
    = f.input :phone
    = f.input :email
    = f.input :town
    = f.input :rooms
    = f.input :amount
    = f.input :check_in
    = f.input :check_out
    - if current_user.has_role?(:admin)
      = f.input :guard_time
    = f.input :description, as: :text

  .row
    .col-md-2.col-md-offset-4.mtop10
      = f.button :submit, class: 'btn btn-info'
