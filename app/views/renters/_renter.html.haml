- renter = renter.decorate
= div_for(renter, class: 'well') do
  .row.text-info
    .col-md-6
      .h4
        -#= "##{renter.id}"
        = renter.town
      %h4
        %span.label.label-info= renter.rooms
        %span.label.label-success= renter.amount
      %span{ data: {toggle: 'tooltip', placement: 'left', title: 'Время заезда'}}
        = icon_tag('home')
        = renter.сheck_in

  - if can? :show, renter
    .row
      .col-md-6
        .phone{ data: {toggle: 'tooltip', placement: 'left', title: 'Телефон'}}
          = renter.phone
        .email
          = renter.email
  .row
    .col-md-12.text-muted
      %em
        = renter.description
  .row
    .col-md-12
      - if Rails.env.development? || current_user.has_role?(:admin)
        Приватное до
        = renter.guard_time
      .actions
        - if renter.user_id.eql?(current_user.id)
          = link_to 'Изменить', edit_renter_path(renter), class: 'btn btn-default btn-sm'
        = link_to 'Посмотреть', renter_path(renter), class: 'btn btn-success btn-sm'
